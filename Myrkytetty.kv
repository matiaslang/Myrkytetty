#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import Factory kivy.factory.Factory

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    AlkometriEka:

<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'M  Y  R   K   Y   T   E   T   T   Y'
            font_size: 60
            size_hint: 1, .35
        Widget:
        BoxLayout:
            padding: 50
            spacing: 50
            Button:
                #size: 30,40
                size_hint: .5, .9
                on_release: app.root.current = 'alko'
                text: 'A L K O M E T R I'
                font_size: 30
                #pos: (200,200)

            Button:
                #size: 100,100
                size_hint: .5, .9
                spacing: 0.1
                text: 'A U D I T - M I T T A R I'
                font_size: 30
                #pos: (100,200)
        Widget:
        Button:
            text: 'i'
            font_size:30
            on_release: Factory.MyPopup().open()
            size_hint: .05,.3
            #LOLOLOLOLOLOLO

<MyPopup@Popup>:
    pos_hint:{'right':.1, 'top': .9}
    size: 200, 200
    size_hint: None, None
    auto_dismiss: False
    Button:
        text: 'Close me!'
        on_release: root.dismiss()
        size_hint: .1, .1

<AlkometriEka>:
    name: 'alko'
    background_color: 0,0,0
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        Label:
            text: 'ALKOMETRI'
            font_size: 100
            size_hint: 1 , .7
        Label:
            size_hint: .25, 1
            text: 'Sukupuoli: '
        BoxLayout:
            size_hint: .5, .2
            spacing: 50
            Button:
                text: 'Mies'
                on_release: root.buttonPushed()
            Button:
                text: 'Nainen'
        BoxLayout:
            spacing: 100
            Button:
                size_hint: .5, .5
                on_release: app.root.current = 'main'
                text: 'Alkuun'
                background_normal: './kuvat/edellinen.png'
                background_down: './kuvat/edellinen.png'
                color: (0, 0, 0, 1)
                border: (2, 2, 2, 2)
            Widget:
            Widget:



<MyPopup@Popup>:
    auto_dismiss: False
    size_hint: None, None
    size: 400, 400
    Button:
        text: 'Close me!'
        on_release: root.dismiss()
