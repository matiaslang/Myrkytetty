#:import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    AnotherScreen:

<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'TESTIÄ :)'
        BoxLayout:
            Button:
                on_release: app.root.current = 'other'
                text: 'Another Screen'
                font_size: 50
            Button:
                size: 100,100
                size_hint: None, 0.5
                spacing: 0.1
                text: 'älä paina tästä'

<AnotherScreen>:
    name: 'other'

    Button:
        on_release: app.root.current = 'main'
        text: 'back to the home screen'
        font_size: 50