#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import Factory kivy.factory.Factory

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    AlkometriEka:

<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'M  Y  R   K   Y   T   E   T   T   Y'
            font_size: 60
            size_hint: 1, .35
        Widget:
        BoxLayout:
            padding: 50
            spacing: 50
            Button:
                #size: 30,40
                size_hint: .5, .9
                on_release: app.root.current = 'alko'
                text: 'A L K O M E T R I'
                font_size: 30
                #pos: (200,200)

            Button:
                #size: 100,100
                size_hint: .5, .9
                spacing: 0.1
                text: 'A U D I T - M I T T A R I'
                font_size: 30
                #pos: (100,200)
        Widget:
        Button:
            text: 'i'
            font_size:30
            on_release: Factory.MyPopup().open()
            size_hint: .05,.3
            #LOLOLOLOLOLOLO

<MyPopup@Popup>:
    pos_hint:{'right':.1, 'top': .9}
    size: 200, 200
    size_hint: None, None
    auto_dismiss: False
    Button:
        text: 'Close me!'
        on_release: root.dismiss()
        size_hint: .1, .1

<AlkometriEka>:
    name: 'alko'
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        Label:
            text: 'ALKOMETRI'
            font_size: 100
            #size: 600,  200
            size_hint: 1 , .7
        Widget:
        BoxLayout:


        BoxLayout:
            spacing: 100
            Button:
                on_release: app.root.current = 'main'
                text: 'back to the home screen'
                source: '.kuvat/edellinen.png'
                border: 30,30,30,30
                color: (1, .3, .8, .5)
            Button:
                text: 'testinappula2'
                on_release: Factory.MyPopup().open()

            Button:
                text: 'testinappula3'
                on_release: Factory.MyPopup().open()


<MyPopup@Popup>:
    auto_dismiss: False
    size_hint: None, None
    size: 400, 400
    Button:
        text: 'Close me!'
        on_release: root.dismiss()
