        BoxLayout:
            #orientation: 'vertical'
            spacing: 100
            size_hint: 1, 0.3
            padding: 0, 100, 0, 5

            Button:
                #size_hint: .5, .5
                on_release: app.root.current = 'main'
                text: 'Alkuun'
